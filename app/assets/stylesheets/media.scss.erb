@media(min-width:1610px) {
  .container {
    width    : 1610px;
    max-width: 1610px;
  }
}
@media(max-width:1609px) {
  .banner a,
  .navbar-nav > li > a,
  body {
    font-size: 18px;
  }

  h1 {
    font-size: 40px;
  }

  h2 {
    font-size: 28px;
  }

  .footer,
  .footer h4 {
    font-size: 14px;
  }

  .footer .social ul li i {
    width        : 30px;
    background   : #000;
    border-radius: 50%;
    height       : 30px;
    text-align   : center;
    line-height  : 30px;
    font-size    : 15px;
  }

  .footer .social ul li {
    display    : inline;
    margin-left: 10px;
  }
}
@media(max-width:991px) {
  .banner a,
  .navbar-nav > li > a,
  body {
    font-size: 16px;
  }

  .navbar-nav > li > a {
    padding: 55px 10px;
  }

  .navbar-brand img {
    max-width : 150px;
    margin-top: 30px;
  }

  .footer .menu ul li {
    width       : calc(100% - 0px);
    float       : left;
    margin-right: 0;
  }

  .footer .social ul li {
    width     : 100%;
    float     : left;
    text-align: center;
    margin    : 0 0 10px;
  }

  .footer .social ul li i {
    margin-left: 0;
  }
}
@media(max-width:767px) {
  .navbar-brand img {
    margin-top: 0;
  }

  header {
    padding-bottom: 20px;
  }

  .navbar-default .navbar-toggle {
    margin-top: 20px;
  }

  .navbar-nav > li > a {
    padding: 15px 10px;
  }

  .navbar-default .navbar-nav > .active > a,
  .navbar-default .navbar-nav > .active > a:focus,
  .navbar-default .navbar-nav > .active > a:hover {
    color     : #003754 !important;
    background: #FFF !important;
  }

  .navbar-nav > li:last-child > a,
  .navbar-nav > li:last-child > a:hover {
    margin-top: 15px;
  }

  .banner p {
    font-size  : 35px;
    line-height: 40px;
  }

  .banner a,
  .navbar-nav > li > a,
  body {
    font-size: 20px;
  }

  .section1 .review .col-sm-4 {
    margin   : 0 auto;
    max-width: 155px;
  }

  .section1 .top {
    padding: 35px 25px;
  }

  .section2 img {
    display: block;
    margin : 0 auto;
  }

  .col-sm-2.menu {
    display: none;
  }

  .footer .col-sm-4 .col-sm-6 {
    width        : 50%;
    float        : left;
    margin-bottom: 20px;
  }

  .col-sm-2.social {
    margin-top: 20px;
  }

  .col-sm-2.social a,
  .col-sm-2.social ul {
    width: 50%;
    float: left;
  }

  .col-sm-2.social ul li {
    dispaly    : inline;
    float      : left;
    width      : initial;
    margin-left: 20px;
  }

  .col-sm-2.social ul li i {
    width      : 50px;
    font-size  : 27px;
    line-height: 50px;
    height     : 50px;
  }

  .col-sm-2.social ul {
    margin-top: 0;
    float     : right;
    max-width : 195px;
  }

  .navbar-nav > li:last-child > a,
  .navbar-nav > li:last-child > a:hover {
    display: inline-block;
  }

  .team .col-sm-4:nth-child(2) {
    margin-bottom: 40px;
  }

  .team .col-sm-4:nth-child(4) {
    width: 50%;
    float: left;
  }

  .team .col-sm-4:nth-child(3) {
    width: 50%;
    float: left;
  }

  .board .col-5 {
    width        : 50%;
    float        : left;
    margin-bottom: 30px;
  }

  .board .col-5:last-child {
    width: 100%;
    float: left;
  }

  .partner .col-5 {
    width        : 33.33%;
    float        : left;
    margin-bottom: 30px;
  }

  .partner .col-5:nth-child(5) {
    margin-left: 16.65%;
  }

  .product.banner .wrapper a {
    margin : 0 auto 20px;
    clear  : both;
    display: table;
    width  : 300px;
  }

  .product_white .container .col-sm-6 img {
    margin-top: 40px;
    display   : block;
    margin    : 40px auto 0;
  }

  .product_white .formob {
    display: block;
  }

  .product_white .forpc {
    display: none;
  }

  .threebox .box {
    margin-bottom: 75px;
    min-height   : inherit;
  }

  .threebox .col-sm-4:last-child .box {
    margin-bottom: 0;
  }

  .navbar-header {
    padding-bottom: 15px;
  }

  .navbar-default .navbar-toggle {
    border: 1px solid #006;
  }

  .navbar-default .navbar-toggle .icon-bar {
    background-color: #006;
  }

  button[aria-expanded="true"] {
    padding   : 0;
    background: none !important;
    border    : none !important;
  }

  button[aria-expanded="true"] .mobbtn i {
    display      : block;
    font-size    : 20px;
    color        : #FFF;
    background   : #006;
    width        : 30px;
    height       : 30px;
    text-align   : center;
    line-height  : 30px;
    border-radius: 50%;
  }

  button[aria-expanded="true"] .mobbtn {
    display: block;
  }

  button[aria-expanded="true"] .pcbtn {
    display: none !important;
  }
}
@media(max-width:500px) {
  h1 {
    font-size: 30px;
  }

  h2 {
    font-size: 20px;
  }

  .col-sm-2.social a,
  .col-sm-2.social ul {
    width : 100%;
    float : none;
    margin: 20px auto 0;
  }

  .col-sm-2.social a img {
    display: block;
    margin : 0 auto;
  }

  .subscription form input[type="email"],
  .subscription form input[type="submit"] {
    border-radius: 5px;
    width        : 100%;
    margin       : 5px 0;
  }
}
