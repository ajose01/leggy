*
{
	margin:0;
	padding:0;
}

@font-face {
  font-family: 'Lato-Light';
  src: font-url('/assets/Lato-Light.eot') format('embedded-opentype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Lato-Light';
  src:  font-url('/assets/Lato-Light.woff') format('woff'), font-url('/assets/Lato-Light.ttf')  format('truetype'), font-url('/assets/Lato-Light.svg#Lato-Light') format('svg');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Lato-Regular';
  src: font-url('/assets/Lato-Regular.eot') format('embedded-opentype');
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Lato-Regular';
  src:  font-url('/assets/Lato-Regular.woff') format('woff'), font-url('/assets/Lato-Regular.ttf')  format('truetype'), font-url('/assets/Lato-Regular.svg#Lato-Regular') format('svg');
  font-weight: normal;
  font-style: normal;
}
a:hover, hover {text-decoration:none;}
h1{ font-size:50px;}
h2{font-size:35px;}
h1, h2{ color:#000; font-family: 'Lato-Regular';}
h1, h2, h4{font-family: 'Lato-Regular';}
ul li {list-style:none;}
html, body {
  height: 100%;
}
.main.carrear{ background:#e6eaf2;}
.main {
  min-height: 100%;
  /* equal to footer height */
  margin-bottom: -300px;
  width:100%;
  float:left;
}
.footer{min-height:300px;}
.push{height:300px; width:100%; float:left;}
.main:after {
  content: "";
  display: block;
}
/*Header */
body {	font-family: 'Lato-Light';  font-size:20px; color:#646466;}
.block { width:100%; float:left; }
.navbar-brand img{ max-width:200px; margin-top:20px;}
.navbar-default{ background:none; border:none; margin:0px;}
.navbar-nav>li>a { padding:55px 15px; color:#969699; font-size:20px;}
.navbar-default .navbar-nav>.active>a, .navbar-default .navbar-nav>.active>a:focus, .navbar-default .navbar-nav>.active>a:hover{ color:#003754 !important; background:#FFF url(<%= asset_path "pagination.png" %>)no-repeat center top !important; font-weight:bold;}
header{border-top:10px solid #003754; background:#FFF;}
.navbar-nav>li:last-child>a, .navbar-nav>li:last-child>a:hover { padding:5px 15px 8px; color:#f22800; border-radius:5px; margin-top:50px; font-weight:bolder; border:1px solid #f22800;}
button[aria-expanded="true"] i {display:none;}
.mobbtn{display:none;}

/*Home banner */
.banner { background:url(<%= asset_path "banner.jpg" %>)no-repeat center; background-size:cover; padding:150px 0 90px; text-align:center;}
.banner a{ background:#f22800; padding:20px 45px; border-radius:5px; color:#FFF;}
.banner img{ display:block; margin:0 auto;}
.banner p { font-size:35px; color:#FFF; padding:15px 0 100px; font-family: 'Lato-Regular';}
.wrapper { max-width:1180px; margin:0 auto;}

/* home .section1*/
.section1 h1{border-left:10px solid #f22800; padding-left:15px; margin-bottom:30px;}
.section1 { background:#e6eaf2; padding:20px 0;}
.section1 .top{ background:#FFF; border-radius:10px; padding:35px 75px;}
.section1 .review img{ border-radius:50%;}
.section1 .review {font-size:16px; text-align:center;}
.section1 .review em { padding:20px 0; display:block;}
.section1 .review .col-sm-6{border-left:1px solid #CCC; border-right:1px solid #CCC; margin-top:30px;}
.section1 .review .col-sm-6:last-child{ border-left:0px;}
.section1 .review .col-sm-4 i{ background:#f22800; color:#FFF; position:absolute; top:15px; right:15px; width:30px; line-height:30px; height:30px; border-radius:50%}

/*home .section2*/
.section2{padding:70px 0;}
.section2 .bullet { width:95px; float:left;}
.section2 .content { width:calc(100% - 95px); float:left;}
.section2 ul{ list-style:none;}
.section2 i{ background:#006da6; color:#FFF;  top:15px; text-align:center; width:60px; line-height:60px; height:60px; border-radius:50%; margin-top:15px; font-size:25px;}
.section2 ul h2{margin:15px 0 5px;}
.section2 ul li{margin-bottom:30px; width:100%; float:left;}
.section2 a{ background:#f22800; padding:20px 75px; border-radius:5px; color:#FFF; margin:0 auto; display:table; margin-top:70px;}

/*home subscription*/
.subscription{text-align:center; padding:30px 0 50px; background:#e6eaf2;}
.subscription form{max-width:560px; padding-left:60px; background:url(<%= asset_path "send.png" %>)no-repeat left center; margin:30px auto 0;}
.subscription form input[type="submit"]{width:150px; border-top-right-radius:5px; border-bottom-right-radius:5px; border:none; height:50px; line-height:50px; color:#FFF; background:#006da6; }
.subscription form input[type="email"]{width:calc(100% - 150px); border-top-left-radius:5px; border-bottom-left-radius:5px; padding-left:15px; border:none; height:50px; line-height:50px; font-style:italic; float:left;}

/*Footer*/

.footer{ border-top:10px solid #acb2bf; background:#081926; font-size:20px; padding:30px 0; color:#acb2bf; }
.footer a{ color:#acb2bf;}
.footer .menu ul li { width:calc(50% - 15px); float:left; margin-right:15px;}
.footer .menu ul li:last-child a{     border: 1px solid #f22800;
    border-radius: 5px;
    color: #f22800;
    padding: 0px 5px;
    font-weight: bolder;
    margin-top: 4px;
    display: inline-block;}
.footer  h4 { text-transform:uppercase; font-weight:normal; font-size:20px; margin-top:0px;}
.footer p{ border-bottom:1px solid #607280; width:100%; padding-bottom:10px; margin-bottom:1px;}
.footer span{ color:#607280;}
.footer .social ul li i{ width:50px; background:#000; border-radius:50%; height:50px; text-align:center; line-height:50px; font-size:30px; color: #acb2bf;}
.footer .social ul li{display:inline; margin-left:20px;}
.footer .social ul li:first-child{margin-left:0px;}
.footer .social ul {margin: 0 auto; display:table; margin-top:30px;}

/* careers page */
.banner2 { background:url(<%= asset_path "careersbanner.jpg" %>)no-repeat center; background-size:cover; padding:150px 0 90px; text-align:center;}
.career.section1{padding-bottom:125px;}

/* company page*/
.company.banner{background:url(<%= asset_path "company.jpg" %>)no-repeat center; background-size:cover; padding:110px 0; text-align:center;}
.company .wrapper h1{ color:#FFF; font-weight:bolder;}
.company .wrapper span{ color:#FFF;}
.company .top h1{border:none; color:#000; max-width:625px; margin:0 auto;}
.company .top a{ background:#006da6; padding:20px 65px; border-radius:5px; color:#FFF; margin:0 auto; display:table; margin-top:30px;}
.company .team img{display:block; margin:0 auto;}
.company .team h4{font-weight:bold;}
.company .team h2{margin-bottom:40px;}
.company .team{padding:20px 0 0; max-width:750px; margin:0 auto; float:none;}
.col-5{width:20%; float:left; padding:0 15px; display:inline-block;}
.company .board{ width:100%;}
.company.section2{padding:30px 0 0;}
.company.section2 h2{ margin-bottom:30px;}
.col-5 p, .company .team p{ font-size:16px;}
.board{border-bottom:1px solid #CCC; padding-bottom:40px;}
.col-5 img{display:block; margin:0 auto;}
.partner {margin-bottom:50px;}
.section1.company{padding-bottom:35px;}
.learn-more{ text-align:center; background:#e6eaf2; padding:25px 0 45px;}
.learn-more .block a{ background:#f22800; padding:15px 50px; border-radius:5px; color:#FFF; margin-bottom:30px; display:inline-block;}
.learn-more h2{margin-bottom:30px; font-weight: bolder;}
.learn-more ul{ max-width:500px; text-align:center; margin:0px auto 0;}
.learn-more ul li{ display:inline; margin:0 10px;}
.learn-more ul li a{color:#969699;}
.learn-more ul li a i{ color:#f22800;}

/* contact page */
.banner2 { background:url(<%= asset_path "contact.jpg" %>)no-repeat center; background-size:cover; padding:150px 0 90px; text-align:center;}
.page_title{text-align:center; background:#FFF; padding:50px 0;}
.page_title i{font-size:40px;}
.page_title h2{margin-top:10px; font-weight:bolder;}
.contact.content{background:#e6eaf2;}
.contact.content .box{ background:#FFF; padding:60px 0; margin:25px 0; border-radius:10px;}
.contact.content .box h2{margin-top:0px;}

/*product page*/
.product.banner .wrapper a{margin:0 10px;}
.product.banner .wrapper a:last-child{background:#081926;}
.product_white{background:#FFF; padding:45px 0;}
.product_white h1{ margin-top:0px; border-left:10px solid #f22800; padding-left:15px; margin-bottom:30px;}
.product_white ul li i{ background:#f22800; color:#FFF; border-radius:50%; width:20px; height:20px; line-height:20px; font-size:16px; text-align:center;}
.product_white .formob{ display:none;}
.product_white img{box-shadow:0px 0px 20px #999; border-radius:10px;}
.product_white ul{margin-top:20px;}
.product_white ul li{font-weight:bolder; color:#000; margin-top:10px;}
.product_white.gray{ background:#e6eaf2;}
.threebox{background:#FFF; padding:80px 0; text-align:center;}
.threebox .box{background:#e6eaf2; border-radius:10px; padding:55px 15px; min-height:505px;}
.threebox .box i.top{font-size:50px; margin-top:-90px; background:#006da6; color:#FFF; width:85px; height:85px; border-radius:50%; line-height:85px;}
.threebox .box ul{margin-top:30px;}
.threebox .box ul li{ font-weight:bolder; margin-top:10px;}
.threebox .box h2{margin-bottom:30px; font-weight:bolder;}
.policy.block{padding:0px 0 40px;}
.policy.block hr{margin:0 0 40px;}
.policy.block .img{width:145px; float:left;}
.policy.block .content{width:calc(100% - 145px); float:left;}
.policy.block .content h2{margin-top:0px; font-weight:bolder;}
